<Window
	x:Class="StringCalculatorUi.View"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:StringCalculatorUi"
	Title="View"
	Height="379"
	Width="496">

	<Window.Resources>
		<local:CalcModeConverter
			x:Key="CalcModeConverter" />
	</Window.Resources>

	<Window.DataContext>
		<local:ViewModel />
	</Window.DataContext>

	<StackPanel>
		<TextBox
			Margin="10"
			Text="{Binding Text}" />

		<Button
			Margin="10"
			Content="Calc"
			Name="CalcButton"
			Command="{Binding CalcCommand}" />

		<Label
			Margin="10"
			Content="Mode:"
			Height="28" />
		<RadioButton
			Margin="10"
			Content="Add"
			IsChecked="{Binding Mode, Converter={StaticResource CalcModeConverter}, ConverterParameter=Add}" />
		<RadioButton
			Margin="10"
			Content="Subtract"
			IsChecked="{Binding Mode, Converter={StaticResource CalcModeConverter}, ConverterParameter=Subtract}" />

		<Label
			Margin="10"
			Content="Result:" />
		<Label
			Margin="10"
			Content="{Binding Result}" />

	</StackPanel>
</Window>